<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--    Client Beans-->
    <bean id="Controller" class="ma.cigma.pfe.presentation.ClientController">
        <property name="clientService" ref="clientService"/>
    </bean>
    <bean id="clientService" class="ma.cigma.pfe.service.ClientServiceImpl" >
        <property name="dao" ref="daoId"/>
    </bean>
    <bean id="daoId" class="ma.cigma.pfe.dao.ClientDaoImpl">
    </bean>

    <!--    Facture Beans-->
    <bean id="factureCtrl" class="ma.cigma.jee.presentation.FactureController">
        <property name="factureService" ref="factureServiceId"/>
    </bean>
    <bean id="factureService" class="ma.cigma.jee.service.FactureServiceImpl">
        <property name="factureDao" ref="factureDaoId"/>
    </bean>
    <bean id="factureDaoId" class="ma.cigma.jee.dao.FactureDaoImpl"/>
</beans>
